.alert {
    padding:20px;
    margin:10px;
    font-weight: 500;
}

.alert-danger {
    border: 1px solid #ebccd1;
    color: #a94442;
    background-color: #f2dede;
}

.alert-info {
    border: 1px solid #bce8f1;
    color: #31708f;
    background-color: #d9edf7;
}

.alert-warning {
    border: 1px solid #faebcc;
    color: #8a6d3b;
    background-color: #fcf8e3;
}
